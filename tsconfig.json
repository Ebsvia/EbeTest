{
  "compilerOptions": {
    "target": "ES2020",                 // Target modern JavaScript
    "module": "ESNext",                 // Use ES Modules
    "moduleResolution": "node",         // Resolve modules as Node.js does
    "esModuleInterop": true,            // Enable interop between CommonJS and ES modules
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",                 // Output directory
    "rootDir": "./src"                  // Root directory for source files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
