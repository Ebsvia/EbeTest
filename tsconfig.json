{
  "compilerOptions": {
    "module": "commonjs",          
    "target": "es6",             
    "outDir": "./dist",            
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true     
  },
  "include": ["src/**/*.ts"],    
  "exclude": ["node_modules"]
}
